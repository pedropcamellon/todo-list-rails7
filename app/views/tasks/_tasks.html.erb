<ul>
    <% unless @tasks.nil? || !@tasks.empty? %>
        <% @tasks.each do |task| %>
            <li><%= task.content %></li>
        <% end %>
    <% else %>
        <li>You have no tasks for this project.</li>

        <%= link_to "Add task", new_project_task_path(@project) %>
    <% end %>
</ul>